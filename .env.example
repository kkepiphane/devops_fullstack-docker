# =============================================================================
# CONFIGURATION ENVIRONNEMENT - COPIER CE FICHIER EN .env
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
PROJECT_NAME="FastAPI Full-Stack"
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
DEBUG=true

# -----------------------------------------------------------------------------
# Database PostgreSQL
# -----------------------------------------------------------------------------
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password_here_change_me
DB_NAME=app_db
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_PASSWORD=your_secure_redis_password_here_change_me
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Générer avec: openssl rand -hex 32
SECRET_KEY=your_secret_key_minimum_32_characters_change_me_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
ALLOWED_HOSTS=["localhost", "127.0.0.1", "yourdomain.com"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost", "https://yourdomain.com"]
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Celery
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/2

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
REACT_APP_API_URL=http://localhost/api

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here_change_me

# -----------------------------------------------------------------------------
# Email (Optionnel - pour notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE=10485760  # 10MB en bytes
UPLOAD_DIR=/tmp/uploads

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
ENABLE_SWAGGER=true  # Désactiver en production